<form action="<%= message ? `/edit-message/${message.message_id}` : '/create-message' %>" method="POST">
    <label for="name">Name:</label><br>
    <input type="text" id="name" name="name" value="<%= message ? message.name : '' %>" required><br>
    <label for="content">Message:</label><br>
    <textarea id="content" name="content" rows="10" required><%= message ? message.content : '' %></textarea><br>
    <input type="submit" value="Send">
</form>